<resources>

    <!--为自定义的View设置自定义属性-->
    <!--name为声明的"属性集合"名，可以随便取，但是最好是设置为跟我们的View一样的名称-->
    <declare-styleable name="FibonacciView">
        <!--声明我们的属性，名称为default_size,取值类型为尺寸类型（dp,px等）-->
        <attr name="default_size" format="dimension"></attr>
    </declare-styleable>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">#f80</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">#f80</item>
        <!--标题栏颜色 选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">#f9f</item>
        <!--正常状态下字体颜色和icon颜色-->
        <!--<item name="android:textColorPrimary">@android:color/darker_gray</item>-->
        <!--<item name="android:textColorPrimary">#ddd</item>-->
        <!--控件选中状态颜色 悬浮按钮底色-->
        <item name="colorAccent">#0ff</item>

    </style>

    <style name="FruitActivityTheme" parent="MyTheme">
    </style>

</resources>
